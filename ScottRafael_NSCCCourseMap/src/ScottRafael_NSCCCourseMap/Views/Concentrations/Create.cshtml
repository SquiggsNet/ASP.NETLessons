@model ScottRafael_NSCCCourseMap.Models.Concentration

@{
    ViewData["Title"] = "Create";
}

<h2>Create Concentration</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProgramId" class="col-md-2 control-label">College Program</label>
            <div class="col-md-10">
                <select asp-for="ProgramId" class="form-control" asp-items="ViewBag.ProgramId">
                    <option value="">-- Select Program --</option>
                </select>
                <span asp-validation-for="ProgramId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
