@model IEnumerable<ScottRafael_NSCCCourseMap.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h2>Courses</h2>

<p>
    <a asp-action="Create">Create New Course</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find string: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Clear Search Results</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>                
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.CodeSortParm">@Html.DisplayNameFor(model => model.CourseCode)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.TitleSortParm">@Html.DisplayNameFor(model => model.Title)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
