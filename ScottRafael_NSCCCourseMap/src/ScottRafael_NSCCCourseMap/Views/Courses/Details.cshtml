@model ScottRafael_NSCCCourseMap.Models.NSCCCourseMapViewModels.CourseInformation

@{
    ViewData["Title"] = "Details";
}

<h2>Course Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Course
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Course.CourseFull)
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Prerequisits
        </dt>
@foreach (var item in Model.CoursePreRequisites)
{
        <dd>
            @Html.DisplayFor(model => model.Course.CourseFull)
        </dd>
}
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Is Prerequisite For
        </dt>
@foreach (var item in Model.PreRequisiteFor)
{
        <dd>
            @Html.DisplayFor(model => model.Course.CourseFull)
        </dd>
}
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
